<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tripNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Trip Note"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/noteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="add note..."
            android:layout_below="@id/tripNote"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/routineOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ—ºï¸ Routine Overview"
            android:layout_below="@id/noteInput"
            android:textSize="24sp"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/routineOverview"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>
</ScrollView>
